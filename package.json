{
	"name": "@essex/alpha-build-utils",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"scripts": {
		"clean": "lerna run clean --stream --parallel",
		"build": "lerna run build --stream",
		"test": "essex test",
		"publish_packages": "lerna publish",
		"release": "run-s build publish_packages",
		"lint": "essex lint --docs --fix",
		"prettify": "essex prettify",
		"audit_dependencies": "essex audit",
		"git_is_clean": "essex git_is_clean",
		"ci": "run-s build lint test git_is_clean"
	},
	"workspaces": {
		"packages": [
			"packages/scripts",
			"packages/config/*",
			"packages/steps/*",
			"packages/util/*"
		]
	},
	"devDependencies": {
		"@essex/eslint-plugin": "portal:./packages/config/eslint-plugin",
		"@essex/scripts": "portal:./packages/scripts",
		"husky": "^4.2.5",
		"lerna": "^3.22.1",
		"lint-staged": "^10.2.11",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"typescript": "^3.9.6"
	},
	"prettier": "./packages/config/prettier-config",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "yarn essex commit-msg"
		}
	},
	"lint-staged": {
		"**/*": [
			"yarn essex prettify --staged"
		],
		"**/md": [
			"yarn essex lint --docs"
		],
		"**/*.{js,jsx,ts,tsx}": [
			"yarn essex lint --fix --staged"
		]
	}
}
